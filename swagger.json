{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Indicadores App",
        "description": "Application to manage different indicators of a city.",
        "contact": {
            "name": "API Support",
            "url": "https://implanchihuahua.org/Directorio.html",
            "email": "support@example.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "servers": [
        {
            "url": "/api/v1"
        }
    ],
    "apis": [
        "src/routes/auth.js"
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login to application",
                "description": "This endpoint is use to get a token that's going to be send in the Authorization header"
            },
            "produces": [
                "application/json"
            ],
            "parameters": [
                {
                    "name": "correo",
                    "in": "formData",
                    "description": "User's email",
                    "required": true
                }
            ]
        },
        "/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Register new user",
                "description": "Create new user with basic information"
            }
        },
        "/usuarios/{id}": {
            "get": {
                "tags": [
                    "Usuario"
                ],
                "summary": "Gets information of a user",
                "security": [
                    {
                        "BearerAuth": [
                            "read"
                        ]
                    }
                ]
            },
            "patch": {
                "tags": [
                    "Usuario"
                ],
                "summary": "Updates user's info",
                "security": [
                    {
                        "BearerAuth": [
                            "write"
                        ]
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Usuario"
                ],
                "summary": "Deactivates an account",
                "security": [
                    {
                        "BearerAuth": [
                            "write"
                        ]
                    }
                ]
            }
        },
        "/indicadores": {
            "post": {
                "tags": [
                    "Indicador"
                ]
            },
            "get": {
                "tags": [
                    "Indicador"
                ]
            }
        },
        "/indicadores/{id}": {
            "get": {
                "tags": [
                    "Indicador"
                ]
            },
            "patch": {
                "tags": [
                    "Indicador"
                ]
            },
            "delete": {
                "tags": [
                    "Indicador"
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Usuario": {
                "type": "object",
                "properties": {
                    "nombres": {
                        "type": "string"
                    },
                    "apellidopaterno": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    }
}